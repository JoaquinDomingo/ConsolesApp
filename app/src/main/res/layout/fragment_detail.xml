<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/tvDetailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/gris_suave"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvDetailName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre de la Consola"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/azul_noche" />

        <TextView
            android:id="@+id/tvDetailCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compañía Fabricante"
            android:textSize="20sp"
            android:textStyle="italic"
            android:textColor="@color/gris_texto_secundario"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvDetailDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Lanzamiento: 01/01/2000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <View
            android:layout_width="60dp"
            android:layout_height="4dp"
            android:background="@color/azul_noche"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDetailDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí va la descripción detallada de la consola y sus características principales."
            android:textSize="17sp"
            android:lineSpacingExtra="4dp"
            android:textColor="@color/gris_texto_secundario" />

    </LinearLayout>
</ScrollView>