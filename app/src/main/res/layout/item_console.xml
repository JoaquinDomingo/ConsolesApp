<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    android:background="@android:drawable/editbox_background"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ivConsole"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:background="@color/gris_suave"
        tools:src="@android:drawable/ic_menu_gallery" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txtviewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/azul_noche"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="PlayStation 5" />

        <TextView
            android:id="@+id/txtviewCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/gris_texto_secundario"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="Sony" />

        <TextView
            android:id="@+id/txtviewReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:text="Lanzamiento: 2020" />

        <TextView
            android:id="@+id/txtviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/gris_texto_secundario"
            android:textSize="14sp"
            tools:text="Descripción corta aquí..." />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:background="@android:drawable/list_selector_background"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="@color/azul_noche" />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:background="@android:drawable/list_selector_background"
            android:src="@android:drawable/ic_menu_delete"
            app:tint="@color/rojo_borrar" />
    </LinearLayout>
</LinearLayout>