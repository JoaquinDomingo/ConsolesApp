<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_fondo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="30dp">

        <View
            android:id="@+id/ivProfilePicture"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:background="@android:drawable/editbox_background" />

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="NOMBRE COMPLETO"
            android:textColor="@color/azul_noche"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="usuario@ejemplo.com"
            android:textColor="@color/gris_texto_secundario"
            android:textSize="16sp" />

        <View
            android:layout_width="50dp"
            android:layout_height="3dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@color/azul_noche" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:drawable/editbox_background"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INFORMACIÓN DE CUENTA"
                android:textColor="@color/azul_noche"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Colección"
                    android:textColor="@color/gris_texto_secundario"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvStatsCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximamente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gris_fondo"
                android:layout_marginVertical="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Antigüedad"
                    android:textColor="@color/gris_texto_secundario"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proximamente"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/azul_noche"
            android:text="EDITAR PERFIL (Proximamente)"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

    </LinearLayout>
</ScrollView>