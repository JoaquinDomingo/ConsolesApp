<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center_horizontal"
    android:padding="30dp"
    android:background="@color/gris_fondo">

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@android:drawable/editbox_background"
        app:tint="@color/azul_noche" />

    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Nombre de Usuario"
        android:textColor="@color/azul_noche"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="usuario@ejemplo.com"
        android:textColor="@color/gris_texto_secundario"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/azul_noche"
        android:layout_marginBottom="24dp"
        android:alpha="0.2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESTADÃSTICAS"
        android:textColor="@color/azul_noche"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:padding="16dp"
        android:text="Consolas registradas: 12"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

</LinearLayout>